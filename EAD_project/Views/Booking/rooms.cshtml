</video>*@
<!-- Optional: some overlay text to describe the video -->

 @*@Html.Partial("roomsPartialView",i)*@

    <span class="content">
        <span class="col-sm-12">
            <span class="form-inline pull-right">

                <input type="text" class="form-control" id="txtSearch" placeholder="Search" />

            </span>
        </span>

        @foreach (var i in Model)
        {
           
            <div>
                <h2>Room Number:@i.roomNum</h2>
                <div class="card" style="width:400px">
                    <img class="card-img-top" src="../@i.roomPic" alt="room1" style="width:100%">
                    <div class="card-body" id="roomname">
                        <h5 class="card-title">Price : @i.roomPrice</h5>
                        <h6 class="card-title">@i.suite</h6>

                        <h4 class="card-title"><a href="price" style="text-decoration:none">Room : @i.roomNum</a></h4>
                        <p class="card-text">@i.description</p>
                    </div>
                </div>
            </div>

        }
    </span>

</body>
</html>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>

    $("#txtSearch").on("keyup", function () {
        var txt = $(this).val();
        $("div").each(function(results){
            if (results!=0){
                var id =$(this).find("h6").text();

                if(id.indexOf(txt)!==0 && id.toLowerCase().indexOf(txt.toLowerCase())<0){
                    $(this).hide();
                }
                else{
                    $(this).show();
                }
            }
        });
    });

</script>
